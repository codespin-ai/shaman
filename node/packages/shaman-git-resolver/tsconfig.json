{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "paths": {
      "@shaman/core/*": ["./node_modules/@codespin/shaman-core/src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}