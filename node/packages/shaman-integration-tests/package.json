{
  "name": "@codespin/shaman-integration-tests",
  "version": "0.0.1",
  "description": "Integration tests for Shaman AI agent management system",
  "type": "module",
  "private": true,
  "scripts": {
    "test": "npm run test:integration:all",
    "test:integration:all": "npm run test:integration:shaman",
    "test:integration:shaman": "mocha 'dist/tests/**/*.test.js' --timeout 30000 --exit",
    "test:integration:grep": "mocha 'dist/tests/**/*.test.js' --timeout 30000 --exit --grep",
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix"
  },
  "dependencies": {
    "@apollo/client": "^3.13.9",
    "@codespin/foreman-client": "^0.0.2",
    "@codespin/shaman-core": "file:../shaman-core",
    "@codespin/shaman-db": "file:../shaman-db",
    "@codespin/shaman-types": "file:../shaman-types",
    "graphql": "^16.11.0",
    "node-fetch": "^3.3.2",
    "pg-promise": "^11.11.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/chai": "^5.2.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.19.9",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "chai": "^5.2.1",
    "eslint": "^9.32.0",
    "mocha": "^11.7.1",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
