{
  "name": "@shaman/server",
  "version": "0.1.0",
  "description": "AI Agent Coordination Framework - Backend Server",
  "type": "module",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/main.js",
    "dev": "tsx watch src/main.ts",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:integration": "vitest --config vitest.integration.config.ts",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "typecheck": "tsc --noEmit",
    "docker:build": "docker build -f docker/Dockerfile -t shaman-server .",
    "docker:run": "docker-compose -f docker/docker-compose.yml up",
    "db:migrate": "tsx scripts/migrate.ts",
    "db:seed": "tsx scripts/seed.ts"
  },
  "dependencies": {
    "@apollo/server": "^4.0.0",
    "@opentelemetry/api": "^1.7.0",
    "@opentelemetry/sdk-node": "^0.45.0",
    "@temporal/client": "^1.8.0",
    "@temporal/worker": "^1.8.0",
    "anthropic": "^0.17.0",
    "bcrypt": "^5.1.0",
    "bullmq": "^4.0.0",
    "cors": "^2.8.5",
    "express": "^4.18.0",
    "graphql": "^16.8.0",
    "graphql-subscriptions": "^2.0.0",
    "graphql-ws": "^5.14.0",
    "ioredis": "^5.3.0",
    "jsonwebtoken": "^9.0.0",
    "openai": "^4.24.0",
    "pg": "^8.11.0",
    "pino": "^8.17.0",
    "prom-client": "^15.1.0",
    "ws": "^8.14.0",
    "yaml": "^2.3.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.0",
    "@types/express": "^4.17.0",
    "@types/jsonwebtoken": "^9.0.0",
    "@types/node": "^20.10.0",
    "@types/pg": "^8.10.0",
    "@types/ws": "^8.5.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0",
    "vitest": "^1.1.0"
  },
  "keywords": [
    "ai", "agents", "automation", "a2a", "graphql", "typescript", "esm"
  ],
  "author": "Shaman Development Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  }
}
